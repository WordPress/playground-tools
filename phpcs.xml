<?xml version="1.0"?>
<ruleset name="PlaygroundTools">
    <description>PHPCS configuration for MyProject using WordPress Coding Standards</description>
    <rule ref="WordPress" />

    <!-- Paths to exclude from PHPCS analysis -->
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*/node_modules/*</exclude-pattern>

    <!-- File extensions to include in the analysis -->
    <arg name="extensions" value="php"/>
    <file>packages/wordpress-playground-block/src</file>

    <!-- Additional rules or exclusions can be added here -->
</ruleset>
